<Window x:Class="CassaSystem.Views.ResultOfSale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ResultOfSale" Height="200" Width="400" WindowStartupLocation="CenterScreen">

    <Grid Background="LightGreen">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <!-- Mesaj üçün olan hissə -->
            <RowDefinition Height="Auto"/>
            <!-- Sayğac üçün olan hissə -->
        </Grid.RowDefinitions>

        <!-- Təbrik Mesajı -->
        <TextBlock Text="Ödəniş uğurla edildi!" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="Green" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"/>

        <!-- Sayğac üçün TextBlock -->
        <TextBlock x:Name="CountdownTextBlock" 
                   FontSize="18" 
                   FontWeight="Bold" 
                   Foreground="Green" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Top" 
                   Margin="0,10,0,0" 
                   Grid.Row="1"/>
    </Grid>
</Window>
